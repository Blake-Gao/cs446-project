<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainMenu"
    android:background="@drawable/background_pattern">

    <!--android:layout_above="@id/main_menu_play"-->
    <TextView
        android:id="@+id/menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="@dimen/text_large"
        android:textColor="@color/main_pink"
        android:text="@string/app_name_caps"/>

    <ImageView
        android:id="@+id/menu_app_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/menu_title"
        android:paddingTop="30dp"
        android:paddingRight="15dp"
        android:scaleX="2.0"
        android:scaleY="2.0"
        android:src="@mipmap/ear_icon"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_menu_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/main_pink"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="@string/main_menu_play"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
        android:textColor="@color/black_overlay" />

</RelativeLayout>