<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/background_pattern">

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="timer"
        android:shadowColor="@color/main_pink"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="8"
        android:text="TextView"
        android:textColor="#C07FD0"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/note_button"
        android:onClick="playNote" android:tag="@string/note1"
        android:layout_alignParentBottom="true"
        android:text="@string/note1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/note_button"
        android:onClick="playNote" android:tag="@string/note2"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button1"
        android:text="@string/note2" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/note_button"
        android:onClick="playNote" android:tag="@string/note3"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button2"
        android:text="@string/note3" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/note_button"
        android:onClick="playNote" android:tag="@string/note4"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button3"
        android:text="@string/note4" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/note_button"
        android:onClick="playNote" android:tag="@string/note5"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button4"
        android:text="@string/note5" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/note_button"
        android:onClick="playNote" android:tag="@string/note6"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button5"
        android:text="@string/note6" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/note_button"
        android:onClick="playNote" android:tag="@string/note7"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button6"
        android:text="@string/note7" />

</RelativeLayout>

